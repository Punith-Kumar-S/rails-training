<center>
<%= stylesheet_link_tag "table.css" %>
<h1>COMPANIES TABLE</h1>
<div>
  <%= link_to "Back to answers", users_path %>
</div>
</br>
<%= form_tag(search_path, :method => "get") do %>

  <div class="input-group">
  <%= search_field_tag :search, params[:search],placeholder: "Search by name", class: "form-control"%>  </div></br>
  <div class="input-btn" style="float:center">
  <%= button_tag "Search User", :class => 'btn btn-info glyphicon glyphicon-search', :name =>nil%>
</div>
<%end%>
</br>
</br>
<div id="company">
<table>
<tr>
<th>ID</th>
<th>Company_id</th>
<th>Company_name</th>
<th>No_of_employee</th>
<th>Address</th>
<th>Department_name</th>
<th>Phone_number</th>
<th>View</th>
</tr>
  <% @companies.each do |company| %>
    <%= render company %>
  <% end %>
</div>
</table>
</br>
<%= paginate @companies%>
</center>




