<center>
<%= stylesheet_link_tag "table.css" %>
<h1>USERS TABLE</h1>
<%= form_tag(search_path, :method => "get") do %>
  <div class="input-group">
  <%= search_field_tag :search, params[:search],placeholder: "Search", class: "form-control"%>  </div></br>
  <div class="input-btn" style="float:center">
  <%= button_tag "SEARCH", :class => 'btn btn-info glyphicon glyphicon-search', :name =>nil%>
</div>
</br>
<%end%>
<%= link_to "COMPANY TABLE", companies_path%>
</br>
</br>
<%= link_to "ROLE TABLE", roles_path%>
</br>
</br>
<div id="user">
<table>
<tr>
<th>ID</th>
<th>First_name</th>
<th>Last_name</th>
<th>Email</th>
<th>Age</th>
<th>Gender</th>
<th><%= sort_link(@q, :country, "Country", default_order: :asc)%></th>
<th>Company_name</th>
<th>No_of_employee</th>
<th>Address</th>
<th>Department_name</th>
<th>Phone_number</th>
<th>Project_name</th>
<th>Role_name</th>
<th>Role_code</th>
<th>View</th>
</tr>
  <% @users.each do |user| %>
    <%= render user %>
  <% end %>
</div>
</table>
</br>
<%= paginate @users%>
</center>



